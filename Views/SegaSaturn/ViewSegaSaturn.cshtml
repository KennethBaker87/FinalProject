@model SegaSaturn

<h3>@Model.Name Information</h3>

@{

    string base64 = "";
    string imgSrc = "";
    if (Model.BoxArt == null)
    {
        base64 = 0.ToString();
        imgSrc = "/images/Default.png";
    }
    else
    {
         base64 = Convert.ToBase64String(Model.BoxArt);
         imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    }
    
}


<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Developer</th>
        <th>Publisher</th>
        <th>Genre</th>
        <th>Rating</th>
        <th>Number of Players</th>
        <th>Release Date</th>
        <th>Box Art</th>
    </tr>
    <tr>
        <td>@Model.ID</td>
        <td>@Model.Name</td>
        <td>@Model.Developer</td>
        <td>@Model.Publisher</td>
        <td>@Model.Genre</td>
        <td>@Model.Rating</td>
        <td>@Model.NumberOfPlayers</td>
        <td>@Model.ReleaseDate</td>
        <td><img src="@imgSrc" /></td>
        
    </tr>
</table>

<div style="display: block">
    <a href="/SegaSaturn/UpdateSegaSaturn/@Model.ID">Update this Game</a>
</div>
<br/>

<div style="display: block">

    @using (Html.BeginForm("DeleteProduct", "SegaSaturn", "Post"))
    {
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>
