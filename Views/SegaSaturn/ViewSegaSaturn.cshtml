@model SegaSaturn

<h3>@Model.Name Information</h3>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Developer</th>
        <th>Publisher</th>
        <th>Genre</th>
        <th>Raiting</th>
        <th>Number of Players</th>
        <th>Release Date</th>
        <th>Box Art</th>
    </tr>
    <tr>
        <td>@Model.ID</td>
        <td>@Model.Name</td>
        <td>@Model.Developer</td>
        <td>@Model.Publisher</td>
        <td>@Model.Genre</td>
        <td>@Model.Raiting</td>
        <td>@Model.NumberOfPlayers</td>
        <td>@Model.ReleaseDate</td>
        <td>@Model.BoxArt</td>
    </tr>
</table>

<div style="display: block">
    <a href="/SegaSaturn/UpdateSegaSaturn/@Model.ID">Update this Game</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteProduct", "SegaSaturn", "Post"))
    {
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>
